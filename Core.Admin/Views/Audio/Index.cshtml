

@model SearchAudioVModel
@{
    ViewData["Title"] = "ملفات الصوت";
}

<!-- Page header start -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">الرئيسية</li>
        <li class="breadcrumb-item active"> ملفات الصوت</li>
    </ol>


</div>
<!-- Page header end -->
<!-- Content wrapper start -->
<div class="content-wrapper">

    <!-- Row start -->
    <div class="row gutters">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card h-100">

                <div class="card-body">
                    <div class="card-form">
                        <div class="card-header">
                            <div class="card-title">
                                <i class="icon-layers2"></i> &nbsp; إدارة ملفات الصوت

                                <a class="add-user" href="@Url.Action("AddEdit","Audio")"><i class="icon-add"></i> إضافة ملف صوت</a>
                            </div>

                        </div>
                        <div class="card-body">

                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12  p-t-20">
                                    <form asp-action="SearchAudio" asp-controller="Audio" method="post" id="frmAudioSearch" enctype="multipart/form-data">
                                        <div class="row gutters">

                                            <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                                                <div class="form-group">
                                                    <label for="Name">الكتاب</label>
                                                    <input type="text" class="form-control" asp-for="BookName" placeholder=" ">
                                                </div>

                                            </div>

                                            <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                                                <div class="form-group">
                                                    <label for="Name">المؤلف</label>
                                                    <input type="text" class="form-control" asp-for="AuthorName" placeholder=" ">
                                                </div>

                                            </div>

                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="sel1"> التصنيف</label>
                                                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                                                        <option>اختر...</option>

                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="sel1"> نوع ملف الصوت</label>
                                                    <select class="form-control" asp-for="AudioTypeId" asp-items="ViewBag.AudioTypes">
                                                        <option>اختر...</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="sel1"> الحالة</label>
                                                    <select class="form-control" asp-for="Status" >
                                                        <option>اختر...</option>
                                                        <option value="true">معتمد</option>
                                                        <option value="false">غير معتمد</option>
                                                    </select>
                                                </div>
                                            </div>


                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="text-right">

                                                    <button type="button" id="btnSearch" class="btn btn-search"><i class="icon-search"></i> بحث</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>



                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12  p-t-20">

                                    <div class="card-form">

                                        <div class="card-body">
                                            <div id="divListAudio" data-request-url="@Url.Action("ListAudio","Audio")">
                                                @Html.Action("ListAudio", "Audio")
                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>




                </div>
            </div>
        </div>
    </div>

</div>
<!-- Content wrapper end -->
