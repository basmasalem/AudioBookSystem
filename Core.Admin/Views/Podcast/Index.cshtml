@model SearchPodcastVModel
@{
    ViewData["Title"] = "التدوين الصوتي";
}

<!-- Page header start -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">الرئيسية</li>
        <li class="breadcrumb-item active">التدوين الصوتي</li>
    </ol>


</div>
<!-- Page header end -->
<!-- Content wrapper start -->
<div class="content-wrapper">

    <!-- Row start -->
    <div class="row gutters">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card h-100">

                <div class="card-body">
                    <div class="card-form">
                        <div class="card-header">
                            <div class="card-title">
                                <i class="icon-layers2"></i> &nbsp; إدارة التدوين الصوتي

                                <a class="add-user" href="@Url.Action("AddEdit","Podcast")"><i class="icon-add"></i> إضافة تدوين صوتي</a>
                            </div>

                        </div>
                        <div class="card-body">

                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12  p-t-20">
                                    <form asp-action="SearchPodcast" asp-controller="Podcast" method="post" id="frmPodcastSearch" enctype="multipart/form-data">
                                        <div class="row gutters">

                                            <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                                                <div class="form-group">
                                                    <label for="Name">الاسم</label>
                                                    <input type="text" class="form-control" asp-for="Name" placeholder=" ">
                                                </div>

                                            </div>
                                            <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                                                <div class="form-group">
                                                    <label for="Type">النوع</label>
                                                    <select asp-for="Type" class="form-control">
                                                        <option value="">اختر</option>
                                                        <option value="1">عام</option>
                                                        <option value="2">خاص</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                                                <div class="form-group">
                                                    <label for="StartDate">تاريخ البداية</label>
                                                    <input type="text" asp-for="StartDate" value="@(Model!=null && Model.StartDate!=null?Model.StartDate.Value.ToString("MM/dd/yyyy"):string.Empty)" class="form-control hijri-date-input" />

                                                </div>
                                            </div>


                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="text-right">

                                                    <button type="button" id="btnSearchPodcast" class="btn btn-search"><i class="icon-search"></i> بحث</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>



                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12  p-t-20">

                                    <div class="card-form">

                                        <div class="card-body">
                                            <div id="divListPodcast" data-request-url="@Url.Action("ListPodcast","Podcast")">
                                                @Html.Action("ListPodcast", "Podcast")
                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>




                </div>
            </div>
        </div>
    </div>

</div>
<!-- Content wrapper end -->
@section Scripts{

    <script src="~/js/Views/PodcastData.js" asp-append-version="true"></script>
}
