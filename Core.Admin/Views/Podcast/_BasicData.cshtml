                <p class="txt-left">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
            </div>
        </div>*@

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="ticket-status-card customScroll9">
                <h6><i class="icon-border_color"></i> التفاصيل</h6>
                <p class="txt-right">@Html.Raw(Model.DescAr)</p>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="ticket-status-card customScroll9">
                <h6><i class="icon-border_color"></i> التفاصيل</h6>
                <p class="txt-left">@Html.Raw(Model.DescEn)</p>
            </div>
        </div>
    </div>

