@model PodcastVM
@{
    ViewData["Title"] = "تدوين صوتي";
}

<!-- Page header start -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">الرئيسية</li>
        <li class="breadcrumb-item">التدوين الصوتي</li>
        <li class="breadcrumb-item active">الاضافة والتعديل</li>

    </ol>


</div>
<!-- Page header end -->
<!-- Content wrapper start -->
<div class="content-wrapper">
    <div class="card">
        <div class="card-header color">
            <div class="card-title">
                <i class="icon-location-pin"></i> إضافة تدوين صوتي
                <a class="add-user" href="@Url.Action("Index","Podcast")"><i class="icon-fast_forward"></i>عودة</a>
            </div>
        </div>
        <div class="card-body">
            <!-- Row start -->
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">

                        <div class="card-body">
                            <div class="card">
                                <div class="card-body">
                                    <form action="AddEdit" method="post" id="frmPodcast" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(x => x.PodcastId)
                                        @Html.HiddenFor(x => x.IsDeleted)
                                        @Html.HiddenFor(x => x.IsActive)
                                        @Html.HiddenFor(x => x.CreationDate)
                                        @Html.HiddenFor(x => x.PublishType)
                                        @Html.HiddenFor(x => x.CreatedBy)
                                        @Html.HiddenFor(x => x.oldImage)
                                        @Html.HiddenFor(x => x.OldAttach)

                                        <div class="row gutters">
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="NameAr">الاسم بالعربي</label>
                                                    <input type="text" class="form-control" asp-for="NameAr" placeholder=" ">
                                                    <span asp-validation-for="NameAr" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="NameEn">الاسم بالانجليزي</label>
                                                    <input type="text" class="form-control" asp-for="NameEn" placeholder=" ">
                                                    <span asp-validation-for="NameEn" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="Url">الرابط</label>
                                                    <input type="text" class="form-control" asp-for="Url" placeholder=" ">
                                                    <span asp-validation-for="Url" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="Type">
                                                        النوع
                                                    </label>
                                                    <div class="input-group">
                                                        <select asp-for="Type" class="form-control">
                                                            <option value="">اختر</option>
                                                            <option value="1">عام</option>
                                                            <option value="2">خاص</option>
                                                        </select>
                                                        <span asp-validation-for="Type" class="text-danger"></span>

                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="StartDate">
                                                        تاريخ البداية
                                                    </label>
                                                    <div class="input-group">
                                                        <input type="text" asp-for="StartDate" value="@(Model!=null && Model.StartDate!=null?Model.StartDate.Value.ToString("MM/dd/yyyy"):string.Empty)" class="form-control hijri-date-input" />
                                                        <span asp-validation-for="StartDate" class="text-danger"></span>

                                                    </div>
                                                </div>

                                            </div>

                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <label for="DescAr">
                                                    الوصف بالعربي
                                                </label>
                                                <textarea class="summernote" asp-for="DescAr"></textarea>
                                            </div>
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <label for="DescEn">الوصف بالانجليزي</label>
                                                <textarea class="summernote" asp-for="DescEn"></textarea>
                                            </div>

                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="form-group">
                                                    <label>الصورة</label>
                                                    @Html.Editor("Image", "Image", new { htmlAttributes = new { @id = "Image" } })
                                                </div>

                                            </div>
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="form-group">
                                                    <label>الملف</label>
                                                    @Html.Editor("Attachment", "Attachments", new { htmlAttributes = new { @id = "Attachment" } })
                                                </div>

                                            </div>
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="text-right">

                                                    <button type="button" id="btnSavePodcast" class="btn btn-save2 "><i class="icon-save"></i> حفظ</button>

                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>

                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content wrapper end -->
@section Scripts{

    <script src="~/js/Views/Podcast.js" asp-append-version="true"></script>
}

