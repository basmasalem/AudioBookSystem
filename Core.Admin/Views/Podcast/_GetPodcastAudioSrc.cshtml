@model PodcastAudioDataVM

    <div class="modal-header">
        <h5 class="modal-title" id="PodcastAudioCenterModalTitle"><i class="icon-mic mic"></i>  @Model.BookNameAr</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="card text-center">

            <div class="card-body">


                <audio controls autoplay>
                    <source src="~/Attachments/Audios/@Model.AudioSrc" type="audio/ogg" />
                </audio>
            </div>
        </div>

    </div>

