@model Article
@{
    ViewData["Title"] = "المقالات";
}

<!-- Page header start -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">الرئيسية</li>
        <li class="breadcrumb-item">المقالات</li>
        <li class="breadcrumb-item active"> الاضافة والتعديل</li>

    </ol>


</div>
<!-- Page header end -->
<!-- Content wrapper start -->
<div class="content-wrapper">
    <div class="card">
        <div class="card-header color">
            <div class="card-title">
                <i class="icon-feather"></i> إضافة مقالة
                <a class="add-user" href="@Url.Action("Index","Article")"><i class="icon-fast_forward"></i>عودة</a>
            </div>
        </div>
        <div class="card-body">
            <!-- Row start -->
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">

                        <div class="card-body">
                            <div class="card">
                                <div class="card-body">
                                    <form action="AddEdit" method="post" id="frmAddArticle" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(x => x.ArticleId)
                                        @Html.HiddenFor(x => x.IsDeleted)
                                        @Html.HiddenFor(x => x.IsActive)
                                        @Html.HiddenFor(x => x.CreationDate)


                                        <div class="row gutters">
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="NameAr">الاسم بالعربي</label>
                                                    <input type="text" class="form-control" asp-for="NameAr" placeholder=" ">
                                                    <span asp-validation-for="NameAr" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="NameEn">الاسم بالانجليزي</label>
                                                    <input type="text" class="form-control" asp-for="NameEn" placeholder=" ">
                                                    <span asp-validation-for="NameEn" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="ArticleOwnerAr">كاتب المقال بالعربي</label>
                                                    <input type="text" class="form-control" asp-for="ArticleOwnerAr" placeholder=" ">
                                                    <span asp-validation-for="ArticleOwnerAr" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="ArticleOwnerEn">كاتب المقال بالانجليزي</label>
                                                    <input type="text" class="form-control" asp-for="ArticleOwnerEn" placeholder=" ">
                                                    <span asp-validation-for="ArticleOwnerEn" class="text-danger"></span>

                                                </div>

                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <label for="DescAr">الوصف بالعربي</label>
                                                <textarea class="summernote" asp-for="DescAr"></textarea>
                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <label for="DescEn">الوصف بالانجليزي</label>
                                                <textarea class="summernote" asp-for="DescEn"></textarea>
                                            </div>

                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="form-group">
                                                    <label>الصورة</label>
                                                    @Html.Editor("Image", "Image", new { htmlAttributes = new { @id = "Image" } })
                                                </div>
                                            </div>

                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="text-right">

                                                    <button type="button" id="btnSaveArticle" class="btn btn-save2 "><i class="icon-save"></i> حفظ</button>

                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>

                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Content wrapper end -->



@section Scripts{

    <script src="~/js/Views/AddArticle.js" asp-append-version="true"></script>
}