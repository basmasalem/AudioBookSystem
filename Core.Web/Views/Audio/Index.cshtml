@model Core.Web.Models.ViewModels.AudioSearchVM
@{
    ViewData["Title"] = _localizer.GetString("Audio");
}



<link href="~/assets/Views/LargeBreadCrumb.css" rel="stylesheet" />
@await Html.PartialAsync("~/Views/Home/_breadcrumb.cshtml", new string[] { "Audio" })

<div class="form-box">
    <div class="container">
        <div class="sec-form">
            <form id="frmSerachAudio">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <span class="placeholder-img"><img src="~/assets/img/icon/grau-book.png"></span>
                            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                                <option value="0">@_localizer["selectCategory"]</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <span class="placeholder-img"><img src="~/assets/img/icon/grau-book.png"></span>
                            <select class="form-control" asp-for="TypeId" asp-items="ViewBag.Types">
                                <option value="0">@_localizer["selectType"]</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <span class="placeholder-img"><img src="~/assets/img/icon/write.png"></span>
                            <input asp-for="Name" class="form-control" type="text" placeholder="@_localizer["NameSearch"] ">
                        </div>
                        <div class="form-group button2">
                            <div class="btn-search">
                                <a class="search_form" href="#" onclick="SearchAudio()">@_localizer["search"]</a>
                            </div>
                        </div>

                    </div>

                </div>
            </form>

        </div>

    </div>
</div>

<!-- Course Categories Start-->
<div id="rs-events-2" class=" sec-spacer2">
    <div class="container" id="divAudioList">
        @Html.Action("ListSound", "Audio",new { Model.Name,Model.CategoryId,Model.TypeId })
    </div>



</div>
<!-- Course Categories End -->

@section Scripts{

    <script src="~/js/Views/Audio.js" asp-append-version="true"></script>
}