@model IEnumerable<AudioViewModel>

@{
    string adminUrl = configuration.GetValue<string>("AdminUrl");
}

<div class="images_decoration_listner">

    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div class="box">
                <a asp-action="Index" asp-controller="Audio" asp-route-Category="@(ViewBag.langId==1?  item.CategoryNameAr:item.CategoryNameEn)"><img src="@(string.IsNullOrEmpty(item.BookImage)?"/assets/img/default.png":adminUrl+"Attachments/Images/"+item.BookImage)"></a>
            </div>
        }
    }
    @if (ViewBag.showAllOrNot)
    {
        <div class="box">
            <a class="total_listner" asp-action="Index" asp-controller="Audio" asp-route-clientKey="@ViewBag.key"><span>@_localizer["all"]</span></a>
        </div>
    }

</div>
