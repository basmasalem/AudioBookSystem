@model IEnumerable<ReaderVM>

@{
    string adminUrl = configuration.GetValue<string>("AdminUrl");
}

<div class="decorations">
    <div class="card decoration">
        <div class="card-header">
            <div class="card-title">
                <img src=@(ViewBag.Item=="followers"?"/assets/img/icon/listner.png":"/assets/img/icon/speaker.png")> @_localizer[ViewBag.Item]

                <span>@ViewBag.Count</span>
            </div>

        </div>
        <div class="card-body">
            <div class="images_decoration_listner">
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="box">
                            <a asp-action="ClientProfile" asp-controller="Client" asp-route-key="@item.Key"><img src="@(string.IsNullOrEmpty(item.Image)?"/assets/img/d-user.png": adminUrl+"/Attachments/Images/"+item.Image)" alt=""></a>
                        </div>
                    }
                }

                @if (ViewBag.showAllOrNot)
                {
                    <div class="box">
                        <a class="total_listner" href="javascript:void(0)" onclick="ShowModal('@ViewBag.Item','@ViewBag.key')"><span>@_localizer["all"]</span></a>
                    </div>
                }



            </div>
        </div>
    </div>

</div>

